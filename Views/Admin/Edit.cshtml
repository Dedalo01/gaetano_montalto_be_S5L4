@{
}

@model Item

<form asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
    <label asp-for="@Model.Name"></label>
    <input type="text" asp-for="@Model.Name" value="@Model.Name"/>
    <br />

    <label asp-for="@Model.Price"></label>
    <input type="text" asp-for="@Model.Price" value="@Model.Price"/>
    <br />

    <label asp-for="@Model.Description"></label>
    <input type="text" asp-for="@Model.Description" value="@Model.Description"/>
    <br />

    <label for="formFile" class="form-label">Scegli una immagine</label>
    <input class="form-control" type="file" id="formFile" name="image" value="@Model.ImageUrls[0]"/>

    <button class="btn btn-primary">Salva</button>


</form>
